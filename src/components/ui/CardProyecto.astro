---
import  { Button} from "@components/ui/button.tsx";
import { FolderGit2, Eye } from "lucide-react";
export interface Props {
    title: string;
    description: string;
    image: string;
    technologies: string[];
    repoUrl?: string;
    demoUrl?: string;
}
const { title, description, image, technologies, repoUrl, demoUrl } = Astro.props;
---
<div>
        <div class=" text-zinc-400 dark:bg-zinc-800 dark:text-zinc-20">
                <div class="bg-cover rounded-3xl h-52 relative overflow-hidden" style={`background-image: url(${image})`}>
                        <div class="absolute inset-0 flex flex-col justify-center items-center gap-1 p-1 bg-zinc-600 bg-opacity-50 text-zinc-200 opacity-0 hover:opacity-100 transition-opacity duration-300">
                                <div>
                                        <h3 class="text-2xl font-bold text-center">{title}</h3>
                                        <p class="text-sm text-center">{description}</p>
                                </div>

                                <div class="flex justify-center">
                                        {technologies.map((tech) => (
                                            <img src={tech} class="p-1 rounded-full w-8" />
                                        ))}
                                </div>
                                <div>
                                        {repoUrl && (
                                            <a href={repoUrl} target="_blank">
                                                    <Button variant='default'>Repositorio <FolderGit2 /></Button>
                                            </a>
                                        )}
                                        {demoUrl && (
                                            <a href={demoUrl} target="_blank">
                                                    <Button variant='default'>Demo <Eye /></Button>
                                            </a>
                                        )}
                                </div>
                        </div>
                </div>

                <!--
                <img src={image} alt={title} class="w-fit rounded-lg "/>
                -->
        </div>
</div>
