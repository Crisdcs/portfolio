---
import {FolderGit2, Eye} from "lucide-react";
export interface Props {
    title: string;
    description: string;
    image: string;
    technologies: string[];
    repoUrl?: string;
    demoUrl?: string;
}
const {title, description, image, technologies, repoUrl, demoUrl} = Astro.props;
---
<div class="grid grid-flow-row gap-1 sm:w-96 w-72">
    <img src={image} alt={title} class="rounded-2xl sm:h-40 sm:w-96 h-32 w-full"/>
    <div>
        <h3 class="text-2xl font-semibold text-center">{title}</h3>
    </div>
    <div class="py-2">
        <p class="sm:text-sm text-sm">{description}</p>
    </div>
    <div class="flex gap-1 px-2 justify-center">
        {technologies.map((tech) => (
                <img src={tech} class="bg-zinc-200/70 rounded-full size-9 p-1" alt={title}/>
        ))}
    </div>
    <div class="pl-2">
        {repoUrl && (
                <a href={repoUrl} target="_blank">

                </a>
        )}
        {demoUrl && (
                <a href={demoUrl} target="_blank">

                </a>
        )}
    </div>
</div>