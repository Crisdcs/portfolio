---
import CardProyecto from "@/components/ui/CardProyecto.astro";
const proyectos = await Astro.glob('../components/Projects/*.md');
---
<div class="bg-sky-600/75 dark:text-zinc-200 dark:bg-zinc-700" id="Project">
    <div class="row-start-1 text-zinc-50 dark:text-zinc-200 text-2xl">
        <p class="animate-pulse font-code text-center py-20">&lt; Proyectos / &gt;</p>
    </div>
    <div class="pb-20 flex justify-center">
        <div class="grid grid-flow-row grid-cols-3 gap-5 items-center mx-20">
            {proyectos.map((proyecto) => (
                    <div class="rounded-3xl shadow-2xl shadow-zinc-700 w-80 bg-zinc-50 p-1">
                        <CardProyecto
                            title={proyecto.frontmatter.title}
                            description={proyecto.frontmatter.description}
                            image={proyecto.frontmatter.image}
                            technologies={proyecto.frontmatter.technologies}
                            repoUrl={proyecto.frontmatter.repoUrl}
                            demoUrl={proyecto.frontmatter.demoUrl}
                        />
                    </div>
            ))}
        </div>
    </div>
</div>
