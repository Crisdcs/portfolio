---
import {Github, LucideLinkedin, LucideMail} from "lucide-react";
import {Button} from "@components/ui/button.tsx";
---
<div class="bg-zinc-100 dark:text-stone-800" id="Contacto">

    <div class="row-start-1 text-zinc-800 dark:text-zinc-600 text-2xl">
        <p class="animate-pulse font-code text-center py-20">&lt; Contacto / &gt;</p>
    </div>
    <div class="pb-20 flex justify-center">
        <div class="">
            <div class="grid sm:grid-cols-2 sm:gap-0 sm:p-0">
                <div class="grid gap-2 text-zinc-900 justify-center content-center">
                    <div class="flex content-center items-center">
                        <img src="/portfolio/icons/icons8-wlocation-96.png" alt="location" class="h-8 w-8 rounded-md bg-zinc-50/70 dark:bg-zinc-500"/>
                        <p class="text-sm px-1">
                            <span class="font-semibold">Dirección: </span><br/>Guadalupe, Nuevo León, México
                        </p>
                    </div>
                   <div class="flex gap-1 justify-center">
                       <a href="https://github.com/Crisdcs" target="_blank">
                           <Button variant='default'><Github /></Button>
                       </a>
                       <a href="www.linkedin.com/in/crisdcs0" target="_blank">
                           <Button variant='react'><LucideLinkedin /></Button>
                       </a>
                       <a href="mailto:cdcs030600@gmail.com?subject=Contacto%20desde%20Portfolio&body=Hola%2C%20quiero%20contactarte" target="_blank" rel="noopener noreferrer" aria-label="Enviar correo a cdcs030600@gmail.com">
                           <Button variant='laravel'><LucideMail /></Button>
                       </a>
                   </div>
                </div>

                <div class="shadow-2xl shadow-zinc-700 rounded-lg">
                    <iframe style="border:10px;width:100%;height:400px;" id="my-form-wqkx9a" src="https://opnform.com/forms/my-form-wqkx9a"></iframe>
                    <script type="text/javascript" onload="initEmbed('my-form-wqkx9a', { autoResize: true })" src="https://opnform.com/widgets/iframe.min.js"></script>
                </div>
            </div>
        </div>
    </div>
</div>