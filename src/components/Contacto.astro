import {Github, LucideLinkedin, LucideMail} from "lucide-react";

---
<div class="pageTheme" id="Contacto">
    <p class="titleTheme">&lt; Contacto / &gt;</p>
    <div class="flex justify-center items-center">
        <div class="grid gap-10 sm:grid-cols-2 content-center">
            <div class="content-center">
                <div class="grid gap-2 text-zinc-200 justify-center">
                    <div class="flex items-center gap-2">
                        <img src="/portfolio/icons/icons8-wlocation-96.png" alt="location" class="h-8 w-8 rounded-md bg-zinc-50/70"/>
                        <p class="text-lg px-1">
                            <span class="font-semibold">Dirección: </span><br/>Guadalupe, Nuevo León, México
                        </p>
                    </div>
                    <div class="flex gap-5 justify-center">
                        <a href="https://github.com/Crisdcs" target="_blank">
                            <button><Github /></button>
                        </a>
                        <a href="www.linkedin.com/in/crisdcs0" target="_blank">
                            <button><LucideLinkedin /></button>
                        </a>
                        <a href="mailto:cdcs030600@gmail.com?subject=Contacto%20desde%20Portfolio&body=Hola%2C%20quiero%20contactarte" target="_blank" rel="noopener noreferrer" aria-label="Enviar correo a cdcs030600@gmail.com">
                            <button><LucideMail /></button>
                        </a>
                    </div>
                </div>
            </div>
            <div class="shadow-2xl shadow-zinc-700 rounded-lg h-96 w-96">
                <iframe id="my-form-wqkx9a" src="https://opnform.com/forms/my-form-wqkx9a"></iframe>
                <script type="text/javascript" onload="initEmbed('my-form-wqkx9a', { autoResize: true })" src="https://opnform.com/widgets/iframe.min.js"></script>
            </div>
        </div>
    </div>

</div>